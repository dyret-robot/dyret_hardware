<launch>
	<arg name="gui" default="true" doc="Launch Robot monitor?" />

	<!-- Launch diagnostic aggregator -->
	<node pkg="diagnostic_aggregator" type="aggregator_node"
		name="dyret_diagnostic_agg">
		<!-- Load aggregator configuration: -->
		<rosparam command="load"
			file="$(find dyret_hardware)/cfg/analyzers.yaml" />
	</node>
	<!-- Launch GUI if requested -->
	<node name="diagnostic_gui" pkg="rqt_robot_monitor" type="rqt_robot_monitor"
		if="$(arg gui)" />
</launch>
